
{% block body %}

    <nav aria-label="Page navigation example">
        <ul class="pagination pg-blue justify-content-center">
            <li id="previous" class="page-item disabled">
                <a class="page-link js-event-page-previous" data-value="0">Previous<span class="sr-only"></span></a>
            </li>

            {% for i in 1..nb %}
                {% if (i-1) == page %}
                <li class="page-item active" id="li-{{ i-1 }}">
                {% else %}
                    <li class="page-item" id="li-{{ i-1 }}">
                {% endif %}
                <a class="page-link js-event-page" data-value="{{ i-1 }}">{{ i }}<span class="sr-only"></span></a>
                </li>
            {% endfor %}

            <li id="next" class="page-item">
                <a class="page-link js-event-page-next" data-value="1">Next<span class="sr-only"></span></a>
            </li>
        </ul>
    </nav>

{% endblock %}
